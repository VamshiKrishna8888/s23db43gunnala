extends layout

block content
  h1= title
  - var items  = results
  div(class="container-fluid")
    div(class="row m-1")
      each item, i in results
        - let destination = `dispatch(\"/music/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1" onclick=`buy(${i})`) Item #{item.name}(#{item.No_of_songs}) is #{item.type}
          button.btn(class="btn-primary ml-1", onclick= destination) Update

  script.
    function buy(i) {
      alert(`You purchased items $(i + 1)`);
    }
    function dispatch(path) {
      window.location.href = path;
    }
